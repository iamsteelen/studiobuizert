{
  "action": {
    "split-button": {
      "wrapper": {
        "border-radius": {
          "type": "dimension",
          "value": "{action.button.border-radius}"
        },
        "gap": {
          "type": "dimension",
          "value": "{density.interaction.space.none}"
        },
        "padding": {
          "type": "dimension",
          "value": "{density.interaction.space.none}"
        }
      },
      "item": {
        "border-radius": {
          "type": "dimension",
          "value": "{density.interaction.radius.none}"
        },
        "border-width": {
          "type": "dimension",
          "value": "{density.interaction.border-width.default}"
        }
      },
      "child": {
        "border": {
          "type": "border",
          "value": {
            "color": "{action.split-color.item.border-color}",
            "width": "{action.split-button.item.border-width}",
            "style": "solid"
          }
        }
      },
      "menu-offset": {
        "value": "{density.interaction.space.4}",
        "type": "dimension",
        "description": "This token can't be applied directly in the Figma component but the save value has been applied using an absolute position with this distance between the bounding box of the button container and the start of the menu."
      }
    },
    "split-color": {
      "item": {
        "border-color": {
          "type": "color",
          "value": "{mode.color.neutral.container.alpha-faint}"
        }
      }
    }
  }
}